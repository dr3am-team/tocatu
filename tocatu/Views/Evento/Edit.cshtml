@model tocatu.Models.Evento

@{
    ViewData["Title"] = "Unir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Unir banda al evento</h1>

<h4>Evento - Seleccionar banda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <label asp-for="BandaId" class="control-label">Seleccionar banda</label>
                <select asp-for="BandaId"  asp-items="ViewBag.Banda">
                    <option selected="selected" value="ViewBag.Banda">Select</option>
                </select>
                <span asp-validation-for="BarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Descripcion" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PrecioEntrada" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Dia" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Hora" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="BarId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ImageFile" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Seleccionar" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
